<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="css/index.css" />
        <title>Admin problems</title>
        <style>
            table {
                border-collapse: collapse;
                width: 70%;
                /* Set the width to 70% of the parent container */
                margin: 20px auto;
                /* Center the table */
            }

            th,
            td {
                border: 1px solid #ddd;
                padding: 8px;
                text-align: left;
            }

            th {
                background-color: #f2f2f2;
            }
        </style>
    </head>

    <body>
        <header>
            <h1>Online Courses [Admin view]</h1>
            <p>Module 2</p>
        </header>
        <table>
            <thead>
                <tr>
                    <th>Reported By</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                <% problems.forEach(problem=> { %>
                    <tr>
                        <td>
                            <%= problem.reported_by %>
                        </td>
                        <td>
                            <%= problem.description %>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </body>

</html>